---
import fs from "fs";
import yaml from "js-yaml";
// Load resume data for name and socials
const resumeData = yaml.load(
  fs.readFileSync("data/resume.yaml", "utf8")
) as any;
const year = new Date().getFullYear();
const socials: { label: string; url?: string; icon: string; aria: string }[] = [
  {
    label: "GitHub",
    url:
      resumeData.github &&
      (resumeData.github.startsWith("http")
        ? resumeData.github
        : `https://${resumeData.github}`),
    aria: "GitHub profile",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.373 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.565 21.796 24 17.299 24 12c0-6.627-5.373-12-12-12Z"/></svg>`,
  },
  {
    label: "LinkedIn",
    url:
      resumeData.linkedin &&
      (resumeData.linkedin.startsWith("http")
        ? resumeData.linkedin
        : `https://${resumeData.linkedin}`),
    aria: "LinkedIn profile",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M4.98 3.5C4.98 4.88 3.87 6 2.5 6S0 4.88 0 3.5 1.12 1 2.5 1s2.48 1.12 2.48 2.5zM.5 8h4V23h-4V8zm7.5 0h3.8v2.15h.05c.53-1 1.82-2.15 3.75-2.15 4.01 0 4.75 2.64 4.75 6.07V23h-4v-7.1c0-1.69-.03-3.87-2.36-3.87-2.36 0-2.72 1.84-2.72 3.74V23h-4V8z"/></svg>`,
  },
  {
    label: "Email",
    url: resumeData.email && `mailto:${resumeData.email}`,
    aria: "Send email",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2Z"/><path d="m22 6-10 7L2 6"/></svg>`,
  },
];
---

<footer class="mt-16 bg-white-400">
  <div class="max-w-[90rem] mx-auto px-4 py-10 sm:px-6 lg:px-8">
    <div class="border-t border-slate-200 pt-10 mx-auto max-w-4xl"></div>
    <div class="flex flex-col items-center gap-6 text-center">
      <nav
        class="flex flex-wrap justify-center gap-5 text-xs font-medium"
        aria-label="Footer navigation"
      >
        <a
          href={`${import.meta.env.BASE_URL}#projects`}
          class="text-slate-600 hover:text-blue-600 transition-colors"
          >Projects</a
        >
        <a
          href={`${import.meta.env.BASE_URL}#experience`}
          class="text-slate-600 hover:text-blue-600 transition-colors"
          >Experience</a
        >
        <a
          href={`${import.meta.env.BASE_URL}#education`}
          class="text-slate-600 hover:text-blue-600 transition-colors"
          >Education</a
        >
        <a
          href={`${import.meta.env.BASE_URL}#certifications`}
          class="text-slate-600 hover:text-blue-600 transition-colors"
          >Certifications</a
        >
      </nav>
      <div
        class="flex items-center gap-4"
        aria-label="Social and contact links"
      >
        {
          socials
            .filter((s) => s.url)
            .map((s) => {
              const url = s.url as string; // after filter, url is defined
              const isMail = url.startsWith("mailto:");
              return (
                <a
                  href={url}
                  aria-label={s.aria}
                  target={isMail ? undefined : "_blank"}
                  rel={isMail ? undefined : "noopener noreferrer"}
                  class="text-slate-500 hover:text-slate-700 transition-colors"
                >
                  <span set:html={s.icon} />
                </a>
              );
            })
        }
      </div>
      <div>
        <p class="text-sm font-semibold text-slate-900">{resumeData.name}</p>
        <p class="text-xs text-slate-500 mt-1">
          Â© {year} All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>
