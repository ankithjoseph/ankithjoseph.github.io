---
import { Image } from "astro:assets";
import profileImage from "../../public/dp.png";
import fs from "fs";
import yaml from "js-yaml";
import Tag from "./Tag.astro";

// Load data at build time
const resumeData = yaml.load(
  fs.readFileSync("data/resume.yaml", "utf8"),
) as any;

// Helper to get first name for avatar
const nameParts = resumeData.name.split(" ");
const firstName = nameParts[0];
const lastName = nameParts[nameParts.length - 1];

// Generate dynamic PDF filename (must match build-pdf.js)
const title = resumeData.title.replace(/\s+/g, "-");
const pdfFileName = `${firstName}-${lastName}_${title}_1-1_Graduate.pdf`;

// Extract key skills for display
const keySkills = resumeData.skills
  .flatMap((cat: any) => cat.items)
  .map((skill: string) => {
    const match = skill.match(/^([^(]+)/);
    return match ? match[1].trim() : skill;
  })
  .slice(0, 12);

// Format phone number for tel: link (remove spaces and formatting)
const phoneHref = resumeData.phone.replace(/\s+/g, "");
---

<aside
  class="lg:col-span-4 lg:sticky lg:top-8 lg:self-start bg-white rounded-2xl border border-slate-200 p-6 shadow-sm"
>
  {/* Profile Photo */}
  <div class="mb-6">
    <Image
      src={profileImage}
      alt={resumeData.name}
      width={512}
      height={512}
      quality={80}
      loading="eager"
      class="w-32 h-32 rounded-full object-cover shadow-xl ring-4 ring-white"
    />
  </div>

  {/* Name & Title */}
  <h1 class="text-2xl font-bold text-slate-900 mb-1">
    {resumeData.name}
  </h1>
  <p class="text-slate-600 font-medium mb-1">{resumeData.title}</p>
  <p class="text-slate-500 text-sm mb-5">
    Based in {resumeData.location}
  </p>

  {/* Social Links with CV Button */}
  <div class="flex items-center gap-3 mb-10">
    <a
      href={`https://${resumeData.linkedin}`}
      target="_blank"
      rel="noopener noreferrer"
      class="w-10 h-10 flex items-center justify-center rounded-full bg-slate-100 text-slate-600 hover:bg-blue-600 hover:text-white transition-all"
      aria-label="LinkedIn"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="currentColor"
        ><path
          d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
        ></path></svg
      >
    </a>
    <a
      href={`https://${resumeData.github}`}
      target="_blank"
      rel="noopener noreferrer"
      class="w-10 h-10 flex items-center justify-center rounded-full bg-slate-100 text-slate-600 hover:bg-slate-900 hover:text-white transition-all"
      aria-label="GitHub"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="currentColor"
        ><path
          d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
        ></path></svg
      >
    </a>
    <a
      href={`mailto:${resumeData.email}`}
      class="w-10 h-10 flex items-center justify-center rounded-full bg-slate-100 text-slate-600 hover:bg-rose-500 hover:text-white transition-all"
      aria-label="Email"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><rect width="20" height="16" x="2" y="4" rx="2"></rect><path
          d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg
      >
    </a>
    <a
      href={`tel:${phoneHref}`}
      class="w-10 h-10 flex items-center justify-center rounded-full bg-slate-100 text-slate-600 hover:bg-green-500 hover:text-white transition-all"
      aria-label="Phone"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path
          d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
        ></path></svg
      >
    </a>
    <a
      href={`${import.meta.env.BASE_URL}${pdfFileName}`}
      target="_blank"
      rel="noopener noreferrer"
      class="h-10 px-4 flex items-center gap-2 rounded-full bg-blue-600 text-white text-sm font-medium hover:bg-blue-700 transition-all shadow-md hover:shadow-lg"
      aria-label="Download CV"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="14"
        height="14"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2.5"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline
          points="7 10 12 15 17 10"></polyline><line
          x1="12"
          x2="12"
          y1="15"
          y2="3"></line></svg
      >
      <span>CV</span>
    </a>
  </div>

  {/* About Section */}
  <div class="mb-10">
    <h2 class="text-xs font-bold text-slate-400 uppercase tracking-wider mb-4">
      About
    </h2>
    <p class="text-sm text-slate-600 leading-relaxed">
      {resumeData.summary}
    </p>
  </div>

  {/* Skills Section */}
  <div>
    <h2 class="text-xs font-bold text-slate-400 uppercase tracking-wider mb-4">
      Skills
    </h2>
    <div class="flex flex-wrap gap-2">
      {keySkills.map((skill: string) => <Tag>{skill}</Tag>)}
    </div>
  </div>
</aside>
